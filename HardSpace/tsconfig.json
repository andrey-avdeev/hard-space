{
	"compilerOptions": {
		"target": "ES5",
		"allowJs": true,
		"module": "system",
		"sourceMap": true,
		"removeComments": false,
		"declaration": false,
		"noEmitOnError": true,
		"alwaysStrict": true,
		"noImplicitAny": false,
		"noImplicitReturns": false,
		"noImplicitThis": false,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": [
		"src/**/*.ts",
		"typings"
	],
	"exclude": [
		"node_modules",
		"src/**/*.spec.ts"
	]
}
